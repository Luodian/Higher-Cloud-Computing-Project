<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.Controller.Controller" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
    <center>
        <Pane fx:id="center_image" style="-fx-background-color: white" prefWidth="1470" maxHeight="750">
            <ImageView pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="http://ou3qtf5jl.bkt.clouddn.com/17-12-4/49749596.jpg"/>
                </image>
            </ImageView>
        </Pane>
    </center>
    <right>
        <GridPane xmlns:fx="http://javafx.com/fxml" fx:id="right_control" style="-fx-background-color: #dad9db"
                  prefWidth="450"
                  prefHeight="750" alignment="center" hgap="30" vgap="30">
            <padding>
                <Insets top="25" right="25" bottom="10" left="25"/>
            </padding>
            <Button fx:id="login_btn" text="登陆" GridPane.rowIndex="0" GridPane.columnIndex="0"
                    onAction="#handleLoginBtn"/>

            <Button fx:id="selectCode" text="选择代码" GridPane.rowIndex="1" GridPane.columnIndex="0"
                    onAction="#handleSelectCode"/>
            <Button fx:id="selectSlaver" text="选择slaver" GridPane.rowIndex="2" GridPane.columnIndex="0"

                    onAction="#handleSelectSlaver"/>
            <Button fx:id="power_slaver" text="启动slaver" GridPane.columnIndex="0" GridPane.rowIndex="3"
                    onAction="#handlePowerSlaverAction"/>
        </GridPane>
    </right>
    <bottom>
        <Pane style="-fx-background-color: #d2d1d3">
            <TextArea fx:id="log" prefHeight="350" prefWidth="1920" editable="true"/>
        </Pane>
    </bottom>
    <stylesheets>
        <URL value="@Hppc.css"/>
    </stylesheets>
</BorderPane>
