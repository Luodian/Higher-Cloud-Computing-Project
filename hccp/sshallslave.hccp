#welcome

count=1
arr=${@}
usr=null
ip=null
for param in ${arr[@]}
do
	judge=`expr $count % 2`
	if [ $judge -eq 1 ]
	then
		usr=${param}
	fi
	if [ $judge -eq 0 ]
	then
		ip=${param}
		$HOME/.hccp/mastertoslave.hccp $usr $ip
	fi
	count=`expr $count + 1`
done


